<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle" >
            <size android:width="60dp" android:height="10dp" />
            <corners android:radius="24dp" />
            <solid android:color="@color/z_gray" />
            <stroke android:width="1px" android:color="@color/y_gray" />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle" >
            <size android:width="60dp" android:height="10dp" />
            <corners android:radius="24dp" />
            <solid android:color="@color/z_gray" />
            <stroke android:width="1px" android:color="@color/y_gray" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle" >
            <size android:width="60dp" android:height="10dp" />
            <corners android:radius="24dp" />
            <solid android:color="@color/z_gray" />
            <stroke android:width="1px" android:color="@color/y_gray" />
        </shape>
    </item>
    <item >
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle" >
            <size android:width="60dp" android:height="25dp" />
            <corners android:radius="24dp" />
            <solid android:color="@color/y_gray" />
            <stroke android:width="1px" android:color="@color/y_gray" />
        </shape>
    </item>
</selector>